<UserControl x:Class="WpfApp1.View.ButtonArticles"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel x:Name="panel">
            <Label  Grid.Row="0" Grid.Column="0" FontFamily="{DynamicResource FontFamily}" FontSize="{DynamicResource FontSize}" Style="{DynamicResource LabelDesign}" Content="Mobile Phones" HorizontalAlignment="Left" VerticalAlignment="Center" Margin=" 20,30"/>
        </StackPanel>
        <Image Source="//..//phone.png" HorizontalAlignment="Right"/>
    </Grid>
</UserControl>
